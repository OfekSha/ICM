<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.ExecutionLeaderForm">
   <top>
      <HBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <ImageView fitHeight="200.0" fitWidth="200.0">
                <Image url="@../img/ICMlogo.png" />
            </ImageView>
            <VBox alignment="TOP_RIGHT" prefHeight="200.0" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
      </HBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.2" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="568.0" prefWidth="1024.0" BorderPane.alignment="CENTER">
            <VBox alignment="BOTTOM_CENTER" spacing="10.0">
                     <Button fx:id="btnBack" mnemonicParsing="false" onAction="#MainScene" prefWidth="180.0" text="Back">
                        <VBox.margin>
                           <Insets />
                        </VBox.margin>
                     </Button>
            <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#LogOutButton" prefWidth="180.0" text="Logout" />
            <Button fx:id="btnExit" mnemonicParsing="false" onAction="#ExitBtn" prefWidth="180.0" text="Exit">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin></Button>
            </VBox>
            <HBox alignment="CENTER_LEFT" prefWidth="200.0">
                  <VBox alignment="TOP_CENTER" prefWidth="200.0" spacing="10.0">
                        <Label contentDisplay="BOTTOM" text="Requests">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                  <graphic>
                      <ComboBox fx:id="cmbRequests" onAction="#RequestsComboBoxUsed" onMouseEntered="#getRequests" prefWidth="180.0" />
                  </graphic></Label>
               <Button fx:id="btnDueTime" mnemonicParsing="false" onAction="#openDueTime" prefWidth="180.0" text="Determining Due Time" />
               <Button fx:id="btnApprove" mnemonicParsing="false" onAction="#openApproveExecution" prefWidth="180.0" text="Approve Execution" />
               <Button fx:id="btnGetExtension" mnemonicParsing="false" onAction="#openExtension" prefWidth="180.0" text="Get Extension" />
                  </VBox>
                  <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0">
                        <Label alignment="CENTER" text="Initiator Request">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin></Label>
                        <TextArea fx:id="taInitiatorRequest" prefHeight="200.0" prefWidth="600.0" wrapText="true" />
               <Label alignment="CENTER" text="Examiners Report">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin></Label>
               <TextArea fx:id="taExaminerReport" layoutX="10.0" layoutY="27.0" prefHeight="200.0" prefWidth="600.0" wrapText="true" />
                  </VBox>
            </HBox>
      </SplitPane>
   </center>
</BorderPane>
