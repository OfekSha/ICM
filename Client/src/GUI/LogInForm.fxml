<BorderPane prefHeight="428.0" prefWidth="513.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.LogInForm">
   <top>
      <HBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <ImageView fitHeight="200.0" fitWidth="200.0">
                  <Image url="/img/ICMlogo.png" />
            </ImageView>
            <VBox alignment="TOP_RIGHT" prefHeight="200.0" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
      </HBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.5" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="568.0" prefWidth="1024.0" BorderPane.alignment="CENTER">
            <VBox alignment="TOP_CENTER" maxWidth="-Infinity" prefHeight="200.0" prefWidth="200.0">
                  <Button fx:id="btnExit" mnemonicParsing="false" onAction="#ExitBtn" prefHeight="25.0" prefWidth="132.0" text="Exit">
                     <VBox.margin>
                        <Insets right="20.0" top="20.0" />
                     </VBox.margin>
                  </Button>
            </VBox>
            <HBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="167.0" prefWidth="337.0">
                  <VBox alignment="TOP_CENTER" prefHeight="226.0" prefWidth="46.0" />
                  <VBox alignment="TOP_CENTER" prefHeight="566.0" prefWidth="211.0" spacing="7.0">

                        <Label text="Enter IP:">
                           <VBox.margin>
                              <Insets top="15.0" />
                           </VBox.margin></Label>
               <TextField fx:id="IP" prefHeight="25.0" prefWidth="416.0" />
                        <Label alignment="CENTER" text="Enter User Name:" />
               <TextField fx:id="UserName" prefHeight="25.0" prefWidth="416.0" />
               <Label alignment="CENTER" text="Enter Password:" />
               <TextField fx:id="Password" prefHeight="25.0" prefWidth="416.0" />
               <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#getInput" text="Log in" />
                  </VBox>
            </HBox>
      </SplitPane>
   </center>
</BorderPane>
